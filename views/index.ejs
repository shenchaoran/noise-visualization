<!DOCTYPE html>
<html>

<head>
    <title>Interaction Draw Feature</title>
    <%- include shared/headerInclude %>
</head>

<body>
    <%# include shared/header %>

        <div id='cesium-div'>
            <div id="cesiumContainer"></div>
            <div id='layer-switch'>
                <div>
                    <span id='layer-switch-btn' class='cesium-button cesium-toolbar-button' onclick='$("#layers").toggle()'>
                        <i class="fas fa-bars"></i>
                    </span>
                    <div id='layers'>
                        <div id='top-tool'>
                            <!-- <span title='add data' class='tool-item cesium-button cesium-toolbar-button' onclick='$(this).next("input").click();'>
                                <i class="fas fa-database"></i>
                            </span> -->
                            <!-- <input name='myfile' type='file' style="display: none;"> -->
                            <span id='load-default' class='tool-item cesium-button cesium-toolbar-button'>
                                <i class='fas fa-plus'></i>
                            </span>
                            <span id='load-result' class='tool-item cesium-button cesium-toolbar-button'>
                                <i class='fas fa-chess-board'></i>
                            </span>
                        </div>
                        <div id="switcher">
                            <table id='primitive-layers'>
                                <tbody data-bind="foreach: layers">
                                    <tr data-bind="visible: (name!==undefined && name !== '')">
                                        <td style="width: 28px;">
                                            <input type="checkbox" data-bind="checked: show">
                                        </td>
                                        <td>
                                            <span data-bind="text: name"></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table id='geojson-layers'>
                                <tbody data-bind="foreach: geojsonLayers">
                                    <!-- <tr data-bind='event: { contextmenu: $root.onRightClick.bind($root, $data, event)}'> -->
                                    <tr>
                                        <td style="width: 28px;">
                                            <input type="checkbox" data-bind="checked: show">
                                        </td>
                                        <td class='layer-name'>
                                            <span data-bind="text: name"></span>
                                        </td>
                                        <!-- <td>
                                            <input type="range" min="0" max="1" step="0.01" data-bind="visible:false,value: alpha, valueUpdate: 'input'">
                                        </td> -->
                                        <!-- <td>
                                            <button type="button" class="cesium-button" data-bind="click: function() { $parent.raise($data, $index()); }, visible: $parent.canRaise($data, $index())">▲</button>
                                        </td>
                                        <td>
                                            <button type="button" class="cesium-button" data-bind="click: function() { $parent.lower($data, $index()); }, visible: $parent.canLower($data, $index())">▼</button>
                                        </td> -->
                                    </tr>
                                </tbody>
                            </table>
                            <table id='image-layers'>
                                <tbody data-bind="foreach: layers">
                                    <!-- <tr data-bind="css: { up: $parent.upLayer === $data, down: $parent.downLayer === $data }"> -->
                                    <tr>
                                        <td style="width: 28px;">
                                            <input type="checkbox" data-bind="checked: show">
                                        </td>
                                        <td>
                                            <!-- <span data-bind="text: name"></span> -->
                                            <span data-bind="text: name, visible: !$parent.isSelectableLayer($data)"></span>
                                            <select data-bind="visible: $parent.isSelectableLayer($data), options: $parent.baseLayers, optionsText: 'name', value: $parent.selectedLayer"></select>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <!-- <div id='context-menu'>
                                <ul>
                                    <li id='change-color'>change color</li>
                                </ul>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>
            <div id="toolbar"></div>
            <div id="logging"></div>
            <div id="loadingIndicator" class="cover">
                <div id="loadingIcon" class="loadingIndicator"></div>
            </div>
            <div id="baseLayerPickerContainer"></div>
        </div>

        <%# include shared/footer %>
</body>

<%- include shared/footerInclude %>

</html>